<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">
  <!--  android:foreground="?attr/selectableItemBackground"> -->

        <RelativeLayout
            android:id="@+id/Relative"
            android:layout_width="match_parent"
            android:layout_height="325dp">

            <ImageView
                android:id="@+id/matches_pic"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="false"
                android:contentDescription="match-pic"
                android:cropToPadding="false"
                android:scaleType="fitXY"
                tools:src="@drawable/josie" />

            <TextView
                android:id="@+id/matches_name"
                android:layout_width="473dp"
                android:layout_height="45dp"
                android:layout_alignBottom="@+id/matches_pic"
                android:layout_centerHorizontal="true"
                android:gravity="end|center"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="#000"
                tools:text="@string/matches" />

            <TextView
                android:id="@+id/location"
                android:layout_width="545dp"
                android:layout_height="35dp"
                android:layout_below="@+id/matches_pic"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:textColor="@color/grey"
                 />


            <ImageButton
                android:id="@+id/like_button"
                android:layout_width="46dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/location"
                android:layout_marginEnd="18dp"
                android:background="@color/white"
                android:clickable="true"
                android:contentDescription="like"
                android:tint="@color/grey"
                app:srcCompat="@drawable/favorite" />
        </RelativeLayout>
  </android.support.v7.widget.CardView>
