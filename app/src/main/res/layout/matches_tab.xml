<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">
  <!--  android:foreground="?attr/selectableItemBackground"> -->

    <RelativeLayout
        android:id="@+id/Relative"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <ImageView
            android:id="@+id/matches_pic"
            android:layout_width="match_parent"
            android:layout_height="197dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="false"
            android:contentDescription="match-pic"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            tools:src="@drawable/josie" />

        <TextView
            android:id="@+id/matches_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/matches_pic"
            android:layout_alignParentStart="true"
            android:gravity="end|center"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="#000"
            tools:text="@string/matches" />

        <TextView
            android:id="@+id/matches_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/matches_pic"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/grey"
            android:textSize="25sp"
            tools:text="@string/matches_desc" />


        <ImageButton
            android:id="@+id/like_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="41dp"
            android:background="@color/white"
            android:contentDescription="like"
            android:tint="@color/grey"
            app:srcCompat="@drawable/favorite"
            android:clickable="true"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
